// Jade
extend layout

block header
  script(type='text/javascript', src='/socket.io/socket.io.js').
  script(type='text/javascript', src='/javascripts/chat.js').
  

block contents
  
  input#user_name(type='hidden', name='user_name', value='#{user_name}').
  p #{user_name}さん、こんにちは
  .setting_area
    
  .select_page
    select#page_no
        for pa in page
            option #{pa}
  .puts
    input#page_change(type='button', value='切り替え').